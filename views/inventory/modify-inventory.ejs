<%if (title) { %>
<h1 id="title"><%= title %></h1>
<%}else {res.redirect('/')} %>

<form action="/inv/update" method="post" id="updateForm">
  <label id="make"
    >Inventory Make: <br />
    <input
      type="text"
      required
      placeholder="What is the make?"
      name="inv_make"
      value="<%=locals.inv_make %>"
    /><br />
  </label>

  <label id="model"
    >Inventory Model: <br />
    <input
      type="text"
      required
      placeholder="What is the model? "
      name="inv_model"
      value="<%=locals.inv_model %>"
    /><br />
  </label>
  <label id="year"
    >Year: <br />
    <input
      type="number"
      required
      placeholder="Year"
      name="inv_year"
      value="<%=locals.inv_year %>"
      min="1886"
      max="2024"
    /><br />
  </label>
  <label id="description"
    >Description: <br />
    <input
      type="text"
      required
      placeholder="Description"
      name="inv_description"
      value="<%=locals.inv_description %>"
    /><br />
  </label>

  <label id="image"
    >Choose Image File<br />
    <input type="text" name="inv_image" placeholder="Image"  value="<%=locals.inv_image %>"/><br />
  </label>

  <label id="thumbnail"
    >Choose Thumbnail File<br />
    <input
      type="text"
      name="inv_thumbnail"
      value="<%=locals.inv_thumbnail %>"
    /><br />
  </label>

  <label id="price"
    >Price: <br />
    <input
      type="number"
      required
      placeholder="Price"
      name="inv_price"
      value="<%=locals.inv_price %>"
    /><br />
  </label>

  <label id="miles"
    >Miles: <br />
    <input
      type="number"
      required
      placeholder="Miles"
      name="inv_miles"
      value="<%=locals.inv_miles %>"
    /><br />
  </label>

  <label id="color"
    >Color: <br />
    <input
      type="text"
      required
      placeholder="Color"
      name="inv_color"
      value="<%=locals.inv_color %>"
    /><br />
  </label>
  <%- classificationSelect %> <br />

  <input type="submit" value="Update Vehicle" id="submitUpdate" disabled/>
  <input type="hidden" name="inv_id"<% if(locals.inv_id) { %> value = "<%= locals.inv_id %>"<%}%>>
</form>

<script src="../../js/inv-update.js"></script>
