<%if (title) { %>
<h1 id="title"><%= title %></h1>
<%}else {res.redirect('/')} %> <% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<form action="/inv/add-classification" method="post" id="add-classification">
  <label for="classification-name" id="classification-label"
    >Classification Name: <br />
    <span>(Name must be alphabetical characters only)</span><br />
    <input
      type="text"
      required
      pattern="[A-Za-z]+"
      placeholder="Classification"
      name="classification_name"
      id="classification-name" /></label
  ><br />
  <input type="submit" value="Add Classification" />
</form>
