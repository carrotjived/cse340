<%if (title) { %>
<h1><%= title %></h1>
<%}else {res.redirect('/')} %> <% if (errors){ %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% }%>

<form action="/account/register" method="post" id="register">
  <label id="firstname">First Name: </label><br />
  <input
    type="text"
    required
    placeholder="Victor Jared"
    name="account_firstname"
    value="<%= locals.account_firstname %>"
  /><br />
  <label id="lastname">Last Name: </label><br />
  <input
    type="text"
    required
    placeholder="Onato"
    name="account_lastname"
    value="<%= locals.account_lastname %>"
  /><br />
  <label id="emailAddress">Email Address:</label><br />
  <input
    type="email"
    name="account_email"
    required
    pattern="[a-z0-9._%+\-]+@[a-z0-9.\-]+\.[a-z]{2,}$"
    placeholder="abc@gmail.com"
    title="A valid email address"
    value="<%= locals.account_email %>"
  /><br />
  <label id="password">Password: </label><br />
  <span
    >(Passwords must be at least 12 characters and contain at least 1 number, 1
    capital letter and 1 special character)</span
  >
  <br />
  <input
    type="password"
    name="account_password"
    required
    pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
    title="Must have 1 special character, 1 uppercase character, and 1 number"
    placeholder="12 minimum characters"
  /><br />
  <input type="submit" value="Register" />
</form>
