<%if (title) { %>
<h1><%= title %></h1>
<%}else {res.redirect('/')} %> <% if (errors){ %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% }%> <%- messages() %>

<form action="/account/update-account" method="post" id="updateAccount">
  <label for="fname">First Name: </label><br />
  <input
    type="text"
    required
    value="<%=locals.account_firstname%>"
    name="account_firstname"
  /><br />
  <label for="lname">Last Name: </label><br />
  <input
    type="text"
    required
    value="<%=locals.account_lastname %>"
    name="account_lastname"
  /><br />
  <label for="">Email Address: </label><br />
  <input
    type="email"
    required
    value="<%=locals.account_email %>"
    name="account_email"
  /><br />
  <input type="submit" value="Update Account" id="submitUpdate" />
  <input type="hidden" name="account_id" <% if(locals.account_id) { %> value="<%=locals.account_id %>"<%}%>>
</form>

<form action="/account/update-password" method="post" id="updatePassword">
  <label for="new-password">New Password: </label><br />
  <span
    >(Entering a new password will change the current password. <br />Passwords
    must be at least 12 characters and contain at least 1 number, 1 capital
    letter and 1 special character)</span
  >
  <br />
  <input
    type="password"
    name="account_password"
    required
    pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
    title="Must have 1 special character, 1 uppercase character, and 1 number"
    placeholder="12 minimum characters"
  /><br />

  <input type="submit" value="Change Password" id="submitUpdate" />
</form>
